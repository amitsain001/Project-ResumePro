<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= resume.fullName %> - Resume</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/CSS/creative.css">
</head>

<style>
  .flashcontainer {
    flex: 1 ;
    position: fixed ;
    z-index: 10000 ;
    display: flex ;
    width: 80% ;
    justify-content: center ;
  }
</style>

<body>

  <div class="flashcontainer">
    <%- include ("../includes/flash.ejs") %>  <!-- flash ejs file --> 
  </div>

  <div class="resume-wrapper">

    <!-- LEFT SIDEBAR -->
    <div class="left-panel">

      <% if (resume.profileImage) { %>
        <div class="profile-img">
          <img src="<%= resume.profileImage %>" alt="Profile Image" />
        </div>
      <% } %>

      <section class="about-me">
        <h2>ABOUT ME</h2>
        <p><%= resume.summary || 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.' %></p>
      </section>

      <section class="skills">
        <h2>SKILLS</h2>
        <ul>
          <% resume.skills.forEach(skill => { %>
            <li>
              <span><%= skill %></span>
              <div class="bar"><div class="fill" style="width: <%= Math.floor(Math.random() * 50 + 50) %>%"></div></div>
            </li>
          <% }) %>
        </ul>
      </section>
    </div>

    <!-- RIGHT CONTENT -->
    <div class="right-panel">

      <header>
        <h1 class="name"><%= resume.fullName %></h1>
        <div class="highlight"></div>
        <p class="role"><%= resume.role || "Business Development Manager" %></p>
        <p class="address"><%= resume.address || 'Address not specified' %></p>
        <p class="contact">
          phone: <%= resume.phone %><br>
          email: <%= resume.email %><br>
          <% if (resume.linkedin) { %>LinkedIn: <%= resume.linkedin %><br><% } %>
          <% if (resume.github) { %>GitHub: <%= resume.github %><% } %>
        </p>
      </header>

      <section class="experience">
        <h2>EXPERIENCE</h2>
        <% resume.experience.forEach(exp => { %>
          <div class="exp-item">
            <h3><%= exp.role %> (<%= exp.startDate %> - <%= exp.endDate %>)</h3>
            <p class="company"><%= exp.company %></p>
            <p><%= exp.description %></p>
          </div>
        <% }) %>
      </section>

      <section class="education">
        <h2>EDUCATION</h2>
        <% resume.education.forEach(edu => { %>
          <div class="edu-item">
            <h3><%= edu.degree %> (<%= edu.startYear %> - <%= edu.endYear %>)</h3>
            <p><%= edu.institution %></p>
          </div>
        <% }) %>
      </section>

      <section class="projects">
        <h2>PROJECTS</h2>
        <% resume.projects.forEach(p => { %>
          <div class="project-item">
            <h3><%= p.title %></h3>
            <p><%= p.description %></p>
            <p><strong>Technologies:</strong> <%= p.technologies.join(', ') %></p>
          </div>
        <% }) %>
      </section>
    </div>
  </div>

  <a href="/download/<%= resume._id %>" class="no-print download-btn">Download PDF</a>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>

</body>
</html>
