<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= resume.fullName %> - Resume</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link rel="stylesheet" href="/CSS/simple.css">
</head>

<style>
  .flashcontainer {
    flex: 1 ;
    position: fixed ;
    z-index: 10000 ;
    display: flex ;
    width: 80% ;
    justify-content: center ;
  }
</style>

<body>

  <div class="flashcontainer">
    <%- include ("../includes/flash.ejs") %>  <!-- flash ejs file --> 
  </div>

  <div class="resume-container">

    <div class="name">
        <h1><%= resume.fullName %></h1>
        <p class="role"><%= resume.role%></p>
    </div><hr>

    <div class="info">
        <p><strong>Email:</strong> <%= resume.email %></p>
        <p><strong>Phone:</strong> <%= resume.phone %></p>
    </div><hr>

    <div class="summary">
        <h2>Summary</h2>
        <p><%= resume.summary %></p>
    </div>

    <div class="education">
        <h2>Education</h2><hr>
        <% resume.education.forEach(e => { %>
        <p><strong><%= e.degree %></strong> - <%= e.institution %> (<%= e.startYear %> - <%= e.endYear %>)</p>
        <% }) %>
    </div>

    <div class="experience">
        <h2>Experience</h2><hr>
        <% resume.experience.forEach(exp => { %>
        <p><strong><%= exp.role %></strong> at <%= exp.company %> (<%= exp.startDate %> - <%= exp.endDate %>)</p>
        <p><%= exp.description %></p>
        <% }) %>
    </div>

    <div class="skills">
        <h2>Skills</h2><hr>
        <ul>
            <% resume.skills.forEach(skill => { %>
                <li><%= skill %></li>
            <% }) %>
        </ul>
    </div>

    <div class="projects">
        <h2>Projects</h2>
        <% resume.projects.forEach(p => { %>
        <p><strong><%= p.title %></strong> - <%= p.description %></p>
        <p>Technologies: <%= p.technologies.join(", ") %></p>
        <% }) %>
    </div>
    
    <a href="/download/<%= resume._id %>">Download as PDF</a>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>

</body>
</html>
