<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= resume.fullName %> - Resume</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link rel="stylesheet" href="/CSS/classic.css">
</head>

<style>
  .flashcontainer {
    flex: 1 ;
    position: fixed ;
    z-index: 10000 ;
    display: flex ;
    width: 80% ;
    justify-content: center ;
  }
</style>

<body>

  <div class="flashcontainer">
    <%- include ("../includes/flash.ejs") %>  <!-- flash ejs file --> 
  </div>

  <div class="resume">

    <!-- Header Section -->
    <div class="header">
      <div class="header-left">
        <h1><%= resume.fullName || "John Doe" %></h1>
        <p class="role"><%= resume.role || "Business Development Manager" %></p>
        <p class="summary">
          <%= resume.summary || "Professional Business Developer with more than four years of experience in business development processes, management, and testing of new opportunities." %>
        </p>
      </div>
      <div class="header-right">
        <ul>
          <li><%= resume.email || "john.doe@gmail.com" %></li>
          <li><%= resume.phone || "202-555-0166" %></li>
          <li><%= resume.address || "New York, USA" %></li>
          <% if (resume.linkedin) { %>
            <li><%= resume.linkedin %></li>
          <% } %>
        </ul>
      </div>
    </div>

    <!-- Skills Section -->
    <div class="section">
      <h2>SKILLS</h2>
      <div class="skills">
        <% resume.skills.forEach(skill => { %>
          <span class="skill-tag"><%= skill %></span>
        <% }) %>
      </div>
    </div>

    <!-- Experience Section -->
    <div class="section">
      <h2>WORK EXPERIENCE</h2>
      <% resume.experience.forEach(exp => { %>
        <div class="job">
          <div class="job-header">
            <h3><%= exp.role %></h3>
            <span class="location"><%= exp.location || "New York, USA" %></span>
          </div>
          <p class="company"><%= exp.company %></p>
          <p class="date"><%= exp.startDate %> — <%= exp.endDate %></p>
          <ul>
            <% if (exp.description) { %>
              <% exp.description.split('.').forEach(line => { %>
                <% if (line.trim()) { %>
                  <li><%= line.trim() %>.</li>
                <% } %>
              <% }) %>
            <% } %>
          </ul>
        </div>
      <% }) %>
    </div>

    <!-- Education Section -->
    <div class="section">
      <h2>EDUCATION</h2>
      <% resume.education.forEach(edu => { %>
        <div class="edu">
          <h3><%= edu.degree %></h3>
          <p class="institution"><%= edu.institution %></p>
          <p class="date"><%= edu.startYear %> — <%= edu.endYear %></p>
        </div>
      <% }) %>
    </div>

    <!-- Organizations Section -->
    <% if (resume.organizations && resume.organizations.length > 0) { %>
      <div class="section">
        <h2>ORGANIZATIONS</h2>
        <% resume.organizations.forEach(org => { %>
          <p><%= org %></p>
        <% }) %>
      </div>
    <% } %>

  </div>

  <!-- Download button (not printed in PDF) -->
  <div class="download-wrap no-print">
    <a href="/download/<%= resume._id %>" class="download-btn">Download as PDF</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>
