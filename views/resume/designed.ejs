<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Resume - Creative Template</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: "Poppins", sans-serif;
      background-color: #f5f7fa;
      margin: 0;
      padding: 0;
    }

    .container {
      width: 80%;
      max-width: 900px;
      margin: 40px auto;
      background: #fff;
      border-radius: 12px;
      padding: 30px 40px;
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      font-size: 28px;
      color: #333;
      margin-bottom: 30px;
    }

    section {
      margin-bottom: 25px;
    }

    .section-title {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 10px;
    }

    .section-title h2 {
      font-size: 20px;
      color: #444;
      margin: 0;
    }

    .add-btn {
      background: #007bff;
      color: #fff;
      border: none;
      border-radius: 6px;
      padding: 6px 10px;
      cursor: pointer;
    }

    .item {
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 12px;
      background: #fafafa;
      position: relative;
    }

    .remove-btn {
      position: absolute;
      top: 10px;
      right: 10px;
      background: crimson;
      color: white;
      border: none;
      padding: 4px 8px;
      border-radius: 4px;
      cursor: pointer;
    }

    input, textarea {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      margin-bottom: 10px;
      border-radius: 6px;
      border: 1px solid #ccc;
      font-size: 14px;
    }

    button[type="submit"] {
      display: block;
      width: 100%;
      padding: 12px;
      font-size: 16px;
      background: #28a745;
      color: #fff;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }

    button[type="submit"]:hover {
      background: #218838;
    }
  </style>
</head>

<body>

  <div class="flashcontainer">
    <%- include ("../includes/flash.ejs") %>  <!-- flash ejs file --> 
  </div>
  
  <div class="container">
    <h1>Edit Your Resume</h1>

    <form action="/resume/save" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="templateType" value="designed" accept="image/*" />

      <!-- NAME SECTION -->
      <section>
        <div class="section-title">
          <h2>Personal Information</h2>
        </div>
        <input type="text" name="fullName" value="<%= resume.fullName || 'John Doe' %>" required />
        <input type="email" name="email" value="<%= resume.email || 'johndoe@gmail.com' %>" required />
        <input type="text" name="phone" value="<%= resume.phone || '9876543210' %>" />
        <input type="text" name="role" value="<%= resume.role || 'Web Developer' %>" />
        <textarea name="summary" rows="3" placeholder="Professional Summary"><%= resume.summary || 'A passionate developer with strong problem-solving skills.' %></textarea>
        <input type="file" name="profileImage" accept="image/*" />
      </section>

      <!-- EDUCATION SECTION -->
      <section id="education-section">
        <div class="section-title">
          <h2>Education</h2>
          <button type="button" class="add-btn" onclick="addEducation()">+ Add</button>
        </div>

        <% (resume.education && resume.education.length ? resume.education : [{ institution: 'ABC University', degree: 'B.Tech Computer Science', startYear: '2020', endYear: '2024' }]).forEach((edu, index) => { %>
          <div class="item">
            <button type="button" class="remove-btn" onclick="this.parentElement.remove()">X</button>
            <input type="text" name="education[<%= index %>][institution]" value="<%= edu.institution %>" placeholder="Institution" />
            <input type="text" name="education[<%= index %>][degree]" value="<%= edu.degree %>" placeholder="Degree" />
            <input type="text" name="education[<%= index %>][startYear]" value="<%= edu.startYear %>" placeholder="Start Year" />
            <input type="text" name="education[<%= index %>][endYear]" value="<%= edu.endYear %>" placeholder="End Year" />
          </div>
        <% }) %>
      </section>

      <!-- EXPERIENCE SECTION -->
      <section id="experience-section">
        <div class="section-title">
          <h2>Experience</h2>
          <button type="button" class="add-btn" onclick="addExperience()">+ Add</button>
        </div>

        <% (resume.experience && resume.experience.length ? resume.experience : [{ company: 'Tech Solutions', role: 'Frontend Developer', startDate: '2023', endDate: '2024', description: 'Worked on building responsive web applications.' }]).forEach((exp, index) => { %>
          <div class="item">
            <button type="button" class="remove-btn" onclick="this.parentElement.remove()">X</button>
            <input type="text" name="experience[<%= index %>][company]" value="<%= exp.company %>" placeholder="Company" />
            <input type="text" name="experience[<%= index %>][role]" value="<%= exp.role %>" placeholder="Role" />
            <input type="text" name="experience[<%= index %>][startDate]" value="<%= exp.startDate %>" placeholder="Start Date" />
            <input type="text" name="experience[<%= index %>][endDate]" value="<%= exp.endDate %>" placeholder="End Date" />
            <textarea name="experience[<%= index %>][description]" rows="2" placeholder="Description"><%= exp.description %></textarea>
          </div>
        <% }) %>
      </section>

      <!-- SKILLS SECTION -->
      <section id="skills-section">
        <div class="section-title">
          <h2>Skills</h2>
          <button type="button" class="add-btn" onclick="addSkill()">+ Add</button>
        </div>
        <div id="skills-list">
          <% (resume.skills && resume.skills.length ? resume.skills : ['JavaScript', 'Node.js', 'MongoDB']).forEach(skill => { %>
            <div class="item">
              <button type="button" class="remove-btn" onclick="this.parentElement.remove()">X</button>
              <input type="text" name="skills[]" value="<%= skill %>" placeholder="Skill" />
            </div>
          <% }) %>
        </div>
      </section>

      <!-- PROJECTS SECTION -->
      <section id="projects-section">
        <div class="section-title">
          <h2>Projects</h2>
          <button type="button" class="add-btn" onclick="addProject()">+ Add</button>
        </div>

        <% (resume.projects && resume.projects.length ? resume.projects : [{ title: 'Portfolio Website', description: 'Built a responsive portfolio using HTML, CSS, and JS.', technologies: ['HTML', 'CSS', 'JavaScript'] }]).forEach((proj, index) => { %>
          <div class="item">
            <button type="button" class="remove-btn" onclick="this.parentElement.remove()">X</button>
            <input type="text" name="projects[<%= index %>][title]" value="<%= proj.title %>" placeholder="Project Title" />
            <textarea name="projects[<%= index %>][description]" rows="2" placeholder="Description"><%= proj.description %></textarea>
            <input type="text" name="projects[<%= index %>][technologies]" value="<%= proj.technologies.join(', ') %>" placeholder="Technologies (comma separated)" />
          </div>
        <% }) %>
      </section>

      <button type="submit">Save Resume</button>
    </form>
  </div>

  <!----------------------------- Java Script Code --------------------------------------------->

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
  <script src="../js/resumesave.js" ></script>
  
</body>
</html>
