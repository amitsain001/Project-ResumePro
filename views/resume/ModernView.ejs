<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= resume.fullName %> - Resume</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/CSS/modern.css">
</head>

<style>
  .flashcontainer {
    flex: 1 ;
    position: fixed ;
    z-index: 10000 ;
    display: flex ;
    width: 80% ;
    justify-content: center ;
  }
</style>

<body>

  <div class="flashcontainer">
        <%- include ("../includes/flash.ejs") %>  <!-- flash ejs file --> 
  </div>

  <div class="resume-container">

    <header>
      <h1 class="name"><%= resume.fullName %></h1>
      <p class="designation"><%= resume.role || "Business Development Manager" %></p>

      <div class="contact-info">
        <p><strong>Phone</strong> <%= resume.phone %></p>
        <p><strong>Email</strong> <%= resume.email %></p>
        <% if (resume.linkedin) { %><p><strong>LinkedIn</strong> <%= resume.linkedin %></p><% } %>
        <% if (resume.github) { %><p><strong>GitHub</strong> <%= resume.github %></p><% } %>
      </div>
    </header>

    <section class="summary">
      <p><%= resume.summary %></p>
    </section>

    <section class="experience">
      <h2>Experience</h2>
      <% resume.experience.forEach(exp => { %>
        <div class="exp-item">
          <div class="exp-header">
            <span class="exp-date"><%= exp.startDate %> - <%= exp.endDate %></span>
            <h3><%= exp.role %></h3>
          </div>
          <p class="company"><%= exp.company %></p>
          <ul>
            <% exp.description.split('.').forEach(line => { if(line.trim() !== '') { %>
              <li><%= line.trim() %></li>
            <% } }) %>
          </ul>
        </div>
      <% }) %>
    </section>

    <section class="education">
      <h2>Education</h2>
      <% resume.education.forEach(e => { %>
        <p><strong><%= e.degree %></strong>, <%= e.institution %> (<%= e.startYear %> - <%= e.endYear %>)</p>
      <% }) %>
    </section>

    <section class="skills">
      <h2>Skills</h2>
      <ul>
        <% resume.skills.forEach(skill => { %>
          <li><%= skill %></li>
        <% }) %>
      </ul>
    </section>

    <section class="projects">
      <h2>Projects</h2>
      <% resume.projects.forEach(p => { %>
        <p><strong><%= p.title %></strong> - <%= p.description %></p>
        <p><strong>Technologies:</strong> <%= p.technologies.join(", ") %></p>
      <% }) %>
    </section>

    <a href="/download/<%= resume._id %>" class="no-print download-btn">Download as PDF</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>

</body>
</html>
