<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Contact Us</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link rel="stylesheet" href="/CSS/contact.css">
</head>

<body>

    <div class="container py-5">
        <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm p-4">
            <h3 class="mb-3">Get in touch</h3>
            <p class="text-muted">Have a question or want to work together? Send a message and we'll respond shortly.</p>

            <% if (success && success.length) { %>
                <div class="alert alert-success flash-msg"><%= success %></div>
            <% } %>
            <% if (error && error.length) { %>
                <div class="alert alert-danger flash-msg"><%= error %></div>
            <% } %>

            <form action="/contact" method="POST" class="mt-3" novalidate>
                <div class="mb-3">
                <label class="form-label">Your name</label>
                <input name="name" class="form-control <%= errors.name ? 'is-invalid' : '' %>" value="<%= old.name || '' %>">
                <% if (errors.name) { %><div class="invalid-feedback"><%= errors.name.msg %></div><% } %>
                </div>

                <div class="mb-3">
                <label class="form-label">Email</label>
                <input name="email" type="email" class="form-control <%= errors.email ? 'is-invalid' : '' %>" value="<%= old.email || '' %>">
                <% if (errors.email) { %><div class="invalid-feedback"><%= errors.email.msg %></div><% } %>
                </div>

                <div class="mb-3">
                <label class="form-label">Subject</label>
                <input name="subject" class="form-control <%= errors.subject ? 'is-invalid' : '' %>" value="<%= old.subject || '' %>">
                <% if (errors.subject) { %><div class="invalid-feedback"><%= errors.subject.msg %></div><% } %>
                </div>

                <div class="mb-3">
                <label class="form-label">Message</label>
                <textarea name="message" class="form-control <%= errors.message ? 'is-invalid' : '' %>" rows="6"><%= old.message || '' %></textarea>
                <% if (errors.message) { %><div class="invalid-feedback"><%= errors.message.msg %></div><% } %>
                </div>

                <!-- reCAPTCHA placeholder (optional) -->
                <!-- <div class="mb-3"><div class="g-recaptcha" data-sitekey="<%= process.env.RECAPTCHA_SITE_KEY %>"></div></div> -->

                <div class="d-flex gap-2">
                <button class="btn btn-primary"><i class="fa fa-paper-plane me-2"></i> Send message</button>
                <a href="/resume" class="btn btn-outline-secondary">Back to home</a>
                </div>
            </form>
            </div>

            <div class="mt-4">
            <div class="row g-3">
                <div class="col-sm-6">
                <div class="p-3 border rounded bg-white">
                    <i class="fa fa-clock fa-fw text-primary"></i>
                    <strong class="d-block">Mon - Fri</strong>
                    <small class="text-muted">9:00 AM - 6:00 PM</small>
                </div>
                </div>
                <div class="col-sm-6">
                <div class="p-3 border rounded bg-white">
                    <i class="fa fa-map-marker-alt fa-fw text-primary"></i>
                    <strong class="d-block">Our Office</strong>
                    <small class="text-muted">City, State, Country</small>
                </div>
                </div>
            </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
            <div class="card-body p-0">
                <!-- optional: embed google map iframe or an image -->
                <iframe src="https://www.google.com/maps?q=New+Delhi&output=embed" style="width:100%;height:100%;min-height:420px;border:0;"></iframe>
            </div>
            </div>
        </div>
        </div>
    </div>

    <!-- optional client-side: Add client-side validation/enhancements -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script src="https://www.google.com/recaptcha/api.js"></script> -->
    </body>

    <script>
        setTimeout(() => {
            document.querySelectorAll('.flash-msg').forEach(msg => {
            msg.style.transition = "opacity 0.5s ease";
            msg.style.opacity = "0";

            setTimeout(() => msg.remove(), 500); // Remove after fade-out
            });
        }, 2000); // Hide after 2 seconds
    </script>

</html>
